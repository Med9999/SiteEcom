<%- include('../components/Navbar.ejs'); %>

<!-- Ajouter une serie -->
  
  <div class="col-sm">
    <button style="margin-left: 165px;"  type="button" class="mt-3 ml-3 btn btn-primary" onclick="rediriger();" > Ajouter un serie </button>
  </div>



<div class="container card-group">
  
  <% locals.items.forEach(e=> { %>

      <div class="row mt-5 mx-md-5">
        <div class="card  mb-3 ">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="<%= '../images/'+e.image %> " style="float:left;height:350px;object-fit:cover;" class="card-img" >
            </div>
            
            <div class="col-md-8">

              <div class="card-body">

                <div class="d-flex justify-content-between ">
                  <div style="font-weight: 600;font-size: 25px;">  
                    <%= e.title %>
                </div>
                  <div class="d-flex ">

                  <!-- Button Modification -->
                <form  action="<%= '/admin/updateItem/'+e._id %> " method="get">
                  <button type="submit" class="btn btn-sm btn-info ">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="20" fill="white" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                      <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                    </svg>
                  </button>
                </form>

                <!-- Button Suppression -->
                <form style="margin-left: 10px;"  action="<%= '/admin/deleteItem/'+e._id %> " method="post">
                  <button type="submit" class="btn btn-sm btn-danger"> 
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="20" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                      <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                    </svg>
                  </button>
                </form>
              </div>
              </div>
              <p class="col-12 mt-4 card-text">
                <%= e.content %>
              </p>
              <div class="row justify-content-between">
                  
                <div class="col-6 my-2">
                  <p class="card-text" style="font-size: 1.5rem;">
                    <span class="badge rounded-pill bg-warning text-dark"> <%= e.genre %></span>
                    </p>
                </div>
                
                <div  style="font-weight: 900;font-size: 2rem;" class="col-4 my-2 text-end ">
                  <small class="text-muted ">
                    <%= e.price %> â‚¬
                    </small>
                </div>
              </div>
                
                <p class="card-text"><small class="text-muted">
                    <%= e.createdAt %>
                  </small></p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <% }) %>


  </div>

  <script>
    rediriger = () => {
      window.location.replace("/admin/addItem")
    }

  </script>